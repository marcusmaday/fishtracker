  <div class="row">
    <div class="col-xs-12">
<table class="table table-bordered table-striped">
  <tr>
    <th></th>
    <% @fish_types.each do |fish_type| %>
      <th><%= fish_type.name %></th>
    <% end %>
    <th class="success">Points</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.nickname %></td>
    <% @fish_types.each do |fish_type| %>
      <td onClick="this.style.backgroundColor = '#FACC2E'; window.location.href = '/fishing/catch?fish_type_id=<%= fish_type.id %>&user_id=<%= user.id %>'" >
        <%= @user_catches[user.id][fish_type.id] if @user_catches[user.id] %>
      </td>
    <% end %>
    <td class="success">
      <%= @user_catches[user.id][:points] if @user_catches[user.id] %>
    </td>
  </tr>
<% end %>

  <tr class="success">
    <td><b>Keepers<b></td>
    <% @fish_types.each do |fish_type| %>
      <td class="keepers"><%= @keepers[fish_type.id] %></td>
    <% end %>
  </tr>
</table>
    </div>
  </div>
<br />
